"wlr/taskbar": {
	"format": "{icon}",
	"icon-size": 12,
	"icon-theme": "Numix-Circle",
	"tooltip-format": "{title}",
	"on-click": "activate",
	"on-click-middle": "close",
	"ignore-list": [
	    "Alacritty"
	],
	"app_ids-mapping": {
		"firefoxdeveloperedition": "firefox-developer-edition"
	},
	"rewrite": {
		"Firefox Web Browser": "Firefox",
		"Foot Server": "Terminal"
	}
},
"custom/separator": {
    "format": "|",
    "interval": "once",
    "tooltip": false
},
								
	
    "keyboard-state": {
	"signal":8,
        "numlock": false,
        "capslock": true,
	"interval":0,
